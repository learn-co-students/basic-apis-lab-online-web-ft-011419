<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repositories %>
  <% @repositories.each do |r| %>
    <h3><%= r["name"]%></h3>
    <a href="<%= r["html_url"] %>"><%= r["html_url"] %></a>
    <p><%= r["description"] %></p>
  <% end %>
<% end %>
